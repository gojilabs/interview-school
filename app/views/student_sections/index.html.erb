<p id="notice"><%= notice %></p>

<h1>Student Sections</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_sections.each do |student_section| %>
      <tr>
        <td><%= student_section.student.first_and_last_name %></td>
        <td><%= student_section.section.description %></td>
        <td><%= link_to 'Show', student_section %></td>
        <td><%= link_to 'Edit', edit_student_section_path(student_section) %></td>
        <td><%= link_to 'Destroy', student_section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student Section', new_student_section_path %>
